{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2021"],
        "module": "commonjs",
        "outDir": "build",
        "preserveConstEnums": true,
        "removeComments": true,
        "strict": true,
        "target": "ES2021"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
